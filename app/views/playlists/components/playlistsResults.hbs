<table class="table table-hover">
    <thead>
    <tr>            
		<th scope="col">Id</th>
        <th scope="col">Nome</th>
        <th scope="col">Descrição</th>
		<th scope="col">Duração</th>
        <th></th>
    </tr>
    <tbody>
        {{#each this}}
            <tr scope="row">
                <td><a href="#playlists/{{_id}}">{{this._id}}</a></td>
				<td>{{this.name}}</td>
                <td>{{this.description}}</td>
                <td>{{this.duration}}</td>
            </tr>
        {{/each}}
    </tbody>
    </thead>
</table>