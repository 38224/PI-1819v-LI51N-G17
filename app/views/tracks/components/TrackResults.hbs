<table class="table table-hover">
    <thead>
        <tr>    
            <th scope="col">Nome da Música</th>
			<th scope="col">URL</th>
            <th scope="col">Duração da Música</th>
        </tr>
        <tbody>
			{{#each this.tracks.track}}
                <tr scope="row">
					<td>{{name}}</a></td>
					<td><a href="{{url}}" target="_blank">{{url}}</a></td>
                    <td>{{duration}} segundos</td>
					<td><a href="#playlists/{{../mbid}}/{{name}}" name = "addMusic">Add to Playlist</button></td>
                </tr>
            {{/each}}
        </tbody>
    </thead>
</table>